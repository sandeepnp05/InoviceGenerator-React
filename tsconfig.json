{
  "compilerOptions": {
              
    "lib": ["dom", "esnext"],    // Include relevant libraries for TypeScript
    "jsx": "react-jsx",         // Enable JSX transformation for React
    "moduleResolution": "node16",  // or "nodenext"
    "module": "Node16",             // Use "esnext" if you're working with modern JavaScript/TypeScript features
    "target": "es6",   
    "strict": true,              // Optional: Enable strict mode for better type checking
    "esModuleInterop": true ,
    "baseUrl": ".",  // Ensure the baseUrl is set correctly
    "paths": {
      "@/*": ["src/*"]
    }    // Optional: Enables default imports for commonjs modules
  },
  "include": [
    "src"
  ]
}
